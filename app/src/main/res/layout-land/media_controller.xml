<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical">

  <LinearLayout
      android:id="@+id/layout_bottom"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="#CC000000"
      android:gravity="center"
      android:minHeight="42dp"
      android:orientation="vertical"
      android:padding="9dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingTop="4dip"
        android:visibility="gone"
        android:orientation="horizontal">

      <ImageButton android:id="@+id/prev"
          style="@android:style/MediaButton.Previous"
          android:contentDescription="@string/description" />

      <ImageButton android:id="@+id/rew"
          style="@android:style/MediaButton.Rew"
          android:contentDescription="@string/description" />

      <ImageButton android:id="@+id/ffwd"
          style="@android:style/MediaButton.Ffwd"
          android:contentDescription="@string/description" />

      <ImageButton android:id="@+id/next"
          style="@android:style/MediaButton.Next"
          android:contentDescription="@string/description" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
      <ImageButton android:id="@+id/pause"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:background="@drawable/ic_media_play"
          android:contentDescription="@string/description" />

      <TextView android:id="@+id/time_current"
          android:textSize="12sp"
          android:textStyle="normal"
          android:paddingTop="4dip"
          android:paddingLeft="4dip"
          android:layout_gravity="center_vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingRight="4dip"
          android:textColor="@android:color/white"/>

      <android.support.v7.widget.AppCompatSeekBar
          android:id="@+id/mediacontroller_progress"
          android:layout_width="0dip"
          android:layout_weight="1"
          android:layout_height="32dip"
          android:layout_gravity="center_vertical"/>

      <TextView android:id="@+id/time"
          android:textSize="12sp"
          android:textStyle="normal"
          android:paddingTop="4dip"
          android:paddingRight="4dip"
          android:layout_gravity="center_vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="4dip"
          android:textColor="@android:color/white"/>

      <ImageButton android:id="@+id/fullscreen"
          android:layout_gravity="center"
          android:layout_width="@dimen/s_40"
          android:layout_height="@dimen/s_40"
          android:src="@drawable/ic_media_fullscreen_shrink"
          android:background="@android:color/transparent"
          android:contentDescription="@string/description" />

    </LinearLayout>

  </LinearLayout>

  <FrameLayout
      android:id="@+id/layout_center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:visibility="visible">

    <ImageView
        android:id="@+id/image_center_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/video_volumn_bg" />

    <ProgressBar
        android:id="@+id/progress_center"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="80dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/layer_progress"
        android:visibility="visible" />
  </FrameLayout>

  <android.support.v4.widget.ContentLoadingProgressBar
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_centerInParent="true"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#CC000000">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/icon_back"/>

    <TextView
        android:id="@+id/video_title"
        android:layout_toRightOf="@id/back"
        android:text="May the Force be with You!"
        style="@style/PlayerMenuText"/>

    <TextView
        android:id="@+id/quality_switch"
        android:text="高清"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        style="@style/PlayerMenuText"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/bullet_switch"
        android:layout_toLeftOf="@id/quality_switch"
        android:paddingRight="@dimen/s_10"
        android:checked="true"
        app:showText="true"
        android:textOn="弹"
        android:textOff="弹"
        style="@style/Switch"
        app:switchTextAppearance="@style/SwitchTextAppearance"/>

  </RelativeLayout>

  <ImageButton
      android:id="@+id/send_bullet"
      android:layout_width="@dimen/s_40"
      android:layout_height="@dimen/s_40"
      android:background="@drawable/stroke_rounded"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"/>
  <TextView
      android:id="@+id/free_label"
      android:text="@string/free_network"
      android:visibility="invisible"
      style="@style/TextWithRoundedBackground" />

</RelativeLayout>