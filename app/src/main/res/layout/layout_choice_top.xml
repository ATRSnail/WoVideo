<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/choice_person_center"
        android:padding="10dp"
        android:src="@drawable/top_logo" />


    <TextView
        android:id="@+id/choice_search_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/logo"
        android:layout_toLeftOf="@+id/choice_qr_scan"
        android:layout_toRightOf="@+id/logo"
        android:background="@drawable/circle_linear_back"
        android:drawableLeft="@drawable/icon_search"
        android:text="@string/plz_search_hint"
        android:drawablePadding="2dp"
        android:paddingLeft="80dp"
        android:gravity="center_vertical"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="70%" />

    <ImageView
        android:id="@+id/choice_qr_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/icon_scan" />

    <ImageView
        android:id="@+id/choice_person_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/choice_qr_scan"
        android:padding="10dp"
        android:src="@drawable/person_selecter"
        android:visibility="gone" />
</android.support.percent.PercentRelativeLayout>