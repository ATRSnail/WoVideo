<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="180dp"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/home_item_img_bg"
            android:src="@drawable/img_4"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/glass_bg"
            android:layout_gravity="bottom"
            android:gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:paddingLeft="@dimen/s_10"
                android:textSize="@dimen/sp_16"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:id="@+id/home_item_title"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESC"
                android:paddingLeft="@dimen/s_10"
                android:singleLine="true"
                android:ems="30"
                android:textSize="@dimen/sp_14"
                android:ellipsize="end"
                android:textColor="@color/gray_darker"
                android:id="@+id/home_item_desc"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:src="@drawable/icon_v_vip"
            android:id="@+id/item_vip_logo"
            />
    </FrameLayout>


</LinearLayout>