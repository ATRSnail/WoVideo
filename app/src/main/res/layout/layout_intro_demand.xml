<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/s_5"
    android:layout_marginTop="@dimen/s_5"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/s_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/demand_intro_simple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:lineSpacingExtra="@dimen/s_5"
            android:textColor="@color/font_black" />

        <TextView
            android:id="@+id/demand_intro_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/expand" />
    </RelativeLayout>

    <TextView
        android:id="@+id/demand_intro_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/s_10"
        android:textColor="@color/font_black"
        android:visibility="gone" />
</LinearLayout>