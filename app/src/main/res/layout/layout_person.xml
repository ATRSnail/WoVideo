<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_person_head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/order"
            >
            <ImageView
                style="@style/person_menu_img"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/order_icon"
                />
            <TextView
                style="@style/person_menu_text"
                android:layout_toRightOf="@id/order_icon"
                android:text="@string/my_order"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/integral"
            >
            <ImageView
                style="@style/person_menu_img"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/integral_icon"
                />
            <TextView
                style="@style/person_menu_text"
                android:layout_toRightOf="@id/integral_icon"
                android:text="@string/my_integral"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/history"
            >
            <ImageView
                style="@style/person_menu_img"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/history_icon"
                />
            <TextView
                style="@style/person_menu_text"
                android:layout_toRightOf="@id/history_icon"
                android:text="@string/history_string"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cache"
            >
            <ImageView
                style="@style/person_menu_img"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/cache_icon"
                />
            <TextView
                style="@style/person_menu_text"
                android:layout_toRightOf="@id/cache_icon"
                android:text="@string/cache_offline"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/collect"
            >
            <ImageView
                style="@style/person_menu_img"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/collect_icon"
                />
            <TextView
                style="@style/person_menu_text"
                android:layout_toRightOf="@id/collect_icon"
                android:text="@string/my_collect"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            />



    </LinearLayout>

</LinearLayout>