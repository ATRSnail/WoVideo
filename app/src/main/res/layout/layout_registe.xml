<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lt.hm.wovideo.widget.SecondTopbar
        android:id="@+id/regist_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_46"
        app:CustomtitleTextColor="@color/black"
        app:CustomtitleTextSize="@dimen/f_16"
        app:Customtoptitle="@string/regist"
        app:leftBackGround="@drawable/left_arrow"
        app:rightBackGround="@drawable/left_arrow" />


    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/regist_account_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:padding="15dp"
            app:layout_heightPercent="10%">

            <ImageView
                android:id="@+id/regist_phone_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="20dp"
                android:src="@drawable/icon_phone" />

            <EditText
                android:id="@+id/et_resigt_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/regist_phone_icon"
                android:background="@null"
                android:hint="@string/hint_login_account"
                android:inputType="phone"
                android:maxLength="11"
                android:textSize="15sp" />
        </android.support.percent.PercentRelativeLayout>

        <View
            android:id="@+id/divider_layout1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/regist_account_layout"
            android:background="@color/gray_btn_bg_color" />

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/regist_validate_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/divider_layout1"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:padding="15dp"
            app:layout_heightPercent="10%">

            <ImageView
                android:id="@+id/regist_validate_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="20dp"
                android:src="@drawable/icon_validate" />

            <EditText
                android:id="@+id/et_regist_validate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/regist_validate_icon"
                android:background="@null"
                android:hint="@string/hint_regist_validate"
                android:inputType="number"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_regist_validate"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_regist_validate"
                android:text="@string/get_validate"
                android:textColor="@color/blue_btn_bg_color"
                app:layout_heightPercent="80%" />
        </android.support.percent.PercentRelativeLayout>

        <View
            android:id="@+id/divider_layout2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/regist_validate_layout"
            android:background="@color/gray_btn_bg_color" />

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/regist_pwd_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/divider_layout2"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:padding="15dp"
            app:layout_heightPercent="10%">

            <ImageView
                android:id="@+id/regist_pwd_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="20dp"
                android:src="@drawable/icon_pwd" />

            <EditText
                android:id="@+id/et_regist_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/regist_pwd_icon"
                android:background="@null"
                android:hint="@string/hint_regist_pwd"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textSize="15sp" />
        </android.support.percent.PercentRelativeLayout>

        <View
            android:id="@+id/divider_layout3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/regist_pwd_layout"
            android:background="@color/gray_btn_bg_color" />

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/divider_layout3"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:padding="15dp"
            app:layout_heightPercent="10%">

            <ImageView
                android:id="@+id/regist_pwd_t_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="20dp"
                android:src="@drawable/icon_pwd" />

            <EditText
                android:id="@+id/et_regist_pwd_t"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/regist_pwd_t_icon"
                android:background="@null"
                android:hint="@string/hint_regist_pwd_t"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textSize="15sp" />
        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>

    <Button
        android:id="@+id/btn_regist_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/blue_btn_bg_color"
        android:text="@string/regist"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_change_login"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/blue_btn_bg_color"
        android:text="@string/had_account_str"
        android:textColor="@color/white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_strike" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/regist_bottom_hint" />

        <TextView
            android:id="@+id/tv_regist_protocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/regist_protocal_name"
            android:textColor="@color/blue_btn_bg_color" />
    </LinearLayout>


</LinearLayout>