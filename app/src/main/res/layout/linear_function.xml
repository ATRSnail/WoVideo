<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:background="@color/mask_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_zan"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginTop="64dp"
        android:text="点赞"
        android:textColor="@color/white"
        android:drawablePadding="10dp"
        android:textSize="12sp"
        android:gravity="center"
        android:drawableLeft="@drawable/video_more_iocn_like"/>

    <TextView
        android:id="@+id/tv_tou"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="投屏"
        android:textColor="@color/white"
        android:drawablePadding="10dp"
        android:textSize="12sp"
        android:gravity="center"
        android:drawableLeft="@drawable/video_more_icon_cast_sreen"/>


    <TextView
        android:id="@+id/tv_fen"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="分享"
        android:textColor="@color/white"
        android:drawablePadding="10dp"
        android:textSize="12sp"
        android:gravity="center"
        android:drawableLeft="@drawable/video_more_icon_share"/>

    <TextView
        android:id="@+id/tv_shou"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="收藏"
        android:textColor="@color/white"
        android:drawablePadding="10dp"
        android:textSize="12sp"
        android:gravity="center"
        android:drawableLeft="@drawable/video_more_icon_collect_nor"/>

</LinearLayout>