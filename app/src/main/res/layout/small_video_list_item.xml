<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_movie_item"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/bg_smell_video_whit_item"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_img_bg"
        android:layout_width="125dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_vertical" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_img_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/item_img_bg"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="俏江南"
        android:textColor="@color/class_font_color"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_img_bg"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/item_img_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_class_black"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="封疆大吏"
            android:textColor="@color/grey_place_title_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/iocn_playtimes_black"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="封疆大吏"
            android:textColor="@color/grey_place_title_color"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>