<?xml version="1.0" encoding="utf-8"?>
<com.lt.hm.wovideo.widget.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    >
    <android.support.percent.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="@string/anthology"
           android:textColor="@color/black"
           android:gravity="center_vertical"
           android:layout_alignParentLeft="true"
           />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:id="@+id/video_update_info"
            android:gravity="center_vertical"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:id="@+id/anthology_all"
                android:text="@string/all_string"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/anthology_text"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                android:text="更新到42集"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow"
                android:gravity="center_vertical"
                android:visibility="gone"
                />
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/anthology_list"
        />
</com.lt.hm.wovideo.widget.PercentLinearLayout>